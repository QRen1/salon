{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "outDir": "./dist/node", // Output for Node.js code
    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts", // Include TypeScript files inside src
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "vite.config.ts" // Explicitly exclude the Vite config file
  ]
}
